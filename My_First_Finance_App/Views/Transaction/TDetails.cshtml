@page
@model My_First_Finance_App.Views.Transaction.TDetailsModel
@{
}

<h2>Transaction Details</h2>

<div>
    <h4>Transaction Id: @Model.Transaction?.TransactionId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Transaction?.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Transaction?.Amount</dd>

        <dt class="col-sm-2">User Id</dt>
        <dd class="col-sm-10">@Model.Transaction?.UserId</dd>

        <dt class="col-sm-2">Category Id</dt>
        <dd class="col-sm-10">@Model.Transaction?.CategoryId</dd>
    </dl>
</div>

<div>
    <a asp-page="Edit" asp-route-id="@Model.Transaction?.TransactionId">Edit</a> |
    <a asp-page="Index">Back to List</a>
</div>
