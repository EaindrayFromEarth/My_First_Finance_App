@page
@model My_First_Finance_App.Views.Transaction.TDeleteModel
@{
}

<h2>Delete Transaction</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Transaction Id: @Model.TransactionId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">User Id</dt>
        <dd class="col-sm-10">@Model.UserId</dd>

        <dt class="col-sm-2">Category Id</dt>
        <dd class="col-sm-10">@Model.CategoryId</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TransactionId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
