@model My_First_Finance_App.Models.Salary

<h2>Create Salary</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Timestamp"></label>
        <input asp-for="Timestamp" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IncomeSourceId"></label>
        <!-- Add a dropdown list for Income Source names -->
        <select asp-for="IncomeSourceId" asp-items="@(new SelectList(ViewBag.IncomeSources, "IncomeSourceId", "Name"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
