@model My_First_Finance_App.Models.Salary

<h2>Edit Salary</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="SalaryId" />
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Timestamp"></label>
        <input asp-for="Timestamp" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IncomeSourceId"></label>
        <input asp-for="IncomeSourceId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
