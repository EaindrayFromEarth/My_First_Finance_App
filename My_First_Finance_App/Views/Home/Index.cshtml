@{
    ViewData["Title"] = "Home Page";
}

<!-- Views/User/Index.cshtml -->
@model User

<h1>Welcome, @Model.Username!</h1>

<!-- Add code to display user transactions and categories -->
<!-- Include Chart.js and create a canvas element for your chart -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<canvas id="myChart" width="400" height="400"></canvas>

<!-- Add JavaScript to initialize and update the chart -->
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Category 1', 'Category 2', 'Category 3'], // Add your category names
            datasets: [{
                label: 'Spending Amount',
                data: [100, 200, 150], // Add your spending amounts
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
