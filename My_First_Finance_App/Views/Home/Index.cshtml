@model IEnumerable<My_First_Finance_App.Models.Category>

<h2>Categories</h2>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">My Finance App</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Category">Categories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Transaction">Transactions</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/User">Users</a>
            </li>
        </ul>
    </div>
</nav>


<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@category.CategoryId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create">Create New</a>
</p>
